<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/headerItemHeight"
    android:clickable="true" >
    
    <View
        android:id="@+id/item_separator"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerHeight"
        android:background="@color/headerDividerColor"
        android:layout_marginTop="@dimen/sectionDividerMarginTop"
        />

    <TextView
        android:textIsSelectable="false"
        android:id="@+id/list_header"
        android:gravity="bottom|left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@id/item_separator"
        android:layout_alignParentLeft="true"
        style="@style/listViewHeaderItem"
        />

</RelativeLayout>
